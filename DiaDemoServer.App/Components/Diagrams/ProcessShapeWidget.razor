@using Blazor.Diagrams.Components.Renderers;
@using Blazor.Diagrams.Core.Models
@using DiaDemoServer.App.Components.Diagrams;
@using DiaDemoServer.App.Models;

<g class="widget">
    <rect class="shape" width="200" height="100" />
    <text class="text" x="100" y="55"
          text-anchor="middle"
          stroke="black"
          stroke-width="1px">
        @Node?.Title
    </text>
    @foreach (var port in Node.Ports)
    {
        <PortRenderer Port="port" Class="default"></PortRenderer>
    }
</g>

@code {
    // This gets filled by the library
    [Parameter] public DiagramSvgNodeModel Node { get; set; } = null!;
}